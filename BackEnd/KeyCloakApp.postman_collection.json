                  "if (json.access_token) { pm.collectionVariables.set('Bearer_Token', json.access_token); }",
                  "if (json.refresh_token) { pm.collectionVariables.set('Refresh_Token', json.refresh_token); }"
                ],
                "type": "text/javascript"
